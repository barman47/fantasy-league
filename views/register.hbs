<main>
    {{#if errors}}
        {{#each errors}}
            <div>
                <p class="red-text text-darken-2 error-messages center">{{this.msg}}</p>
            </div>
        {{/each}}
    {{/if}}
    <p class="red-text center">{{error}}</p>
    <div class="container section">
        <form name="studentSignupForm" action="/users/register" method="POST">
            <h4 class="center">User Signup</h4>
            <div class="input-field">
                <i class="mdi mdi-account-outline prefix form-icons"></i>
                <input type="text" id="name" name="name" class="validate" value="{{name}}" autofocus>
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Please provide your name" data-success="Okay!"></span>
            </div>
            <div class="input-field">
                <i class="mdi mdi-account-outline prefix form-icons"></i>
                <input type="text" id="username" name="username" class="validate" value="{{username}}">
                <label for="name">Username Here</label>
                <span class="helper-text" data-error="Invalid Username!" data-success="Okay!"></span>
            </div>
            <div class="input-field">
                <i class="mdi mdi-lock-outline prefix form-icons"></i>
                <input type="password" id="password" name="password" class="validate" value="{{password}}">
                <label for="name">Password</label>
                <span class="helper-text" data-error="Invalid Password!" data-success="Okay!">Password should be at least 8 characters long</span>
            </div>
            <div class="input-field">
                <i class="mdi mdi-check prefix form-icons"></i>
                <input type="password" id="confirmPassword" name="confirmPassword" class="validate" value="{{confirmPassword}}">
                <label for="confirmPassword">Confirm Password</label>
                <span class="helper-text" data-error="Passwords do not match" data-success="Okay!"></span>
            </div>
            <div class="input-field">
                <button class="btn waves-effect waves-white" id="signupButton" type="submit">Submit</button>
            </div>
        </form>
    </div>
</main>
{{> footer}}